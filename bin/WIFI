#!/bin/bash

set -ux

echo -n >/tmp/.myip

ip link show wlan0 | grep 'UP'

if [ $? != 0 ]; then
    nmcli radio wwan off
    nmcli radio wifi on
    exit
else
    nmcli radio wifi off
    ssh-add -D
    exit
fi

exit

ACTION=$*

if [ -n "${ACTION}" ];then
	case $ACTION in
	  on)
	  nmcli radio wwan off
	  nmcli radio wifi on
	  #sleep 3s
	  #nmcli connection show --active
	  ;;
	  off)
	  nmcli radio wifi off
	  nmcli connection show --active
	  ssh-add -D
	  ;;
	  *)  
      	  echo "Usage: $0 {on|off}"
          exit 1
          ;;
	esac
fi

exit 0


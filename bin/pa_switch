#!/bin/bash

set -e

A=`pacmd dump | grep "set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo" | cut -d " " -f 3`

volume_up() {
    B=$((A + 0x01000))
    if [ $(($B)) -gt $((0x18000)) ]
    then
        B=$((0x18000))
    fi
    pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo `printf "0x%X" $B`
}

volume_down() {
    B=$((A - 0x01000))
    if [ $(($B)) -lt $((0x00000)) ]
    then
        B=$((0x00000))
    fi
    pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo `printf "0x%X" $B`
}

mic_toggle() {
    pactl set-source-mute alsa_input.pci-0000_00_1f.3.analog-stereo toggle
}

sink_mute_toggle() {
    pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo toggle
}

while test -n "$1";
do
    case "$1" in
        --help|-h)
            echo "print_help"
            exit
            ;;
        --volume-up)
            volume_up
            exit
            ;;
        --volume-down)
            volume_down
            exit
            ;;
        --mic-toggle)
            mic_toggle
            exit
            ;;
        --sink-mute-toggle)
            sink_mute_toggle
            exit
            ;;
        *)
            echo "Unknown argument: $1"
            exit
            ;;
    esac
    shift
done

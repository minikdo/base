## --- Modern v8.x Features ---
set minibar           # Use a sleek, one-line status bar at the bottom instead of two
#set zero              # Hide the title bar and status bar for maximum screen space (clean look)

## --- Interface & Navigation ---
set linenumbers       # Display line numbers
set mouse             # Enable mouse support
set softwrap          # Wrap long lines without breaking words
set atblanks          # Wrap at whitespace, not mid-word

## --- Editing & Indentation ---
set tabsize 4         # 4 spaces tab
set tabstospaces      # Convert tabs to spaces
set autoindent        # Match indentation of new line with previous one
set zap               # Delete selected text with Backspace/Delete

## --- Colors & Highlighting ---
include "/usr/share/nano/*.nanorc"
set titlecolor brightwhite,blue
set statuscolor brightwhite,green
set numbercolor cyan
set selectedcolor black,yellow